<Window
    x:Class="Alex.GuiDebugger.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
    xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Alex.GuiDebugger.Views"
    xmlns:viewModels="clr-namespace:Alex.GuiDebugger.ViewModels"
    Title="Alex GUI Debugger"
    d:DesignHeight="450"
    d:DesignWidth="800"
    id:DockProperties.IsDragEnabled="True"
    id:DockProperties.IsDropEnabled="True"
    BorderBrush="{DynamicResource ThemeBorderLowBrush}"
    BorderThickness="1"
    Foreground="{DynamicResource ThemeForegroundBrush}"
    Icon="/Assets/Alex.ico"

    RenderOptions.BitmapInterpolationMode="HighQuality"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>
    
        <idc:DockControl
            Margin="4"
            DataContext="{Binding Layout}" />
   
</Window>
